          stage("build") {

                steps {

                   Echo 'building the application...'
                 }
           }
           stage("test") {
                 
                  steps {
                    
                       Echo 'Build to Test the application'

                       }
                    }

             stage("deploy") {
                  
                   steps {
             
                        Echo 'Build to Deploy the application'
                       }
                    }
          }
}

                 
